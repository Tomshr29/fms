<script>
	// Attendez que le DOM soit chargé
document.addEventListener('DOMContentLoaded', function () { // Sélectionnez tous les liens de la barre latérale
const sidebarLinks = document.querySelectorAll('.sidebar-link');

// Parcourez chaque lien et ajoutez un écouteur d'événements click
sidebarLinks.forEach(function (link) {
link.addEventListener('click', function () { // Supprimez la classe active de tous les liens
sidebarLinks.forEach(function (l) {
l.classList.remove('border-l-4', 'border-orange-500');
});
// Ajoutez la classe active uniquement au lien cliqué
link.classList.add('border-l-4', 'border-orange-500');
});
});
});
</script>
