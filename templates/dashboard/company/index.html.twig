{% extends 'dashboard_layout.html.twig' %}

{% block content %}
    <h1>Company home page</h1>

    <table>
        <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>address</th>
            <th>type</th>
            <th>head_office</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.address.id ?? 'null' }}</td>
                <td>{{ company.type }}</td>
                {% if company.headOffice == true %}
                    <td style="color: green">Yes</td>
                {% else %}
                    <td style="color: red">No</td>
                {% endif %}
                <td>
                    <a href="{{ path('dashboard_company_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('dashboard_company_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('dashboard_company_new') }}">Create new</a>

{% endblock %}